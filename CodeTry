#MAGNETIC SWITCH CODE
import RPi.GPIO as GPIO #use GPIO from now on
import time 

SWITCH_PIN = 14
GPIO.setmode(GPIO.BCM) #making sense of the pin number

GPIO.setup(SWITCH_PIN, GPIO.IN, connect_tgt = GPIO.PUD.UP) #pin,input,default 

try: #get out of this by control c 
    while True:
        time.sleep(0.1) #do I even need this? 
    # GPIO.input(SWITCH_PIN) gives us high or low
        if GPIO.input(SWITCH_PIN) == GPIO.LOW:
            print("Gate is closed")
        else:
            print("Gate is open")

except KeyboardInterrupt:
    GPIO.cleanup()
